# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           net.macports 1.0

name                net.macports.sync-from-macosforge
version             3

depends_run         port:rsync

destroot.keepdirs   ${destroot}${prefix}/var/log/sync-from-macosforge ${destroot}${prefix}/var/rsync/macports
destroot {
    xinstall -d -o _www -g _www ${destroot}${prefix}/var/log/sync-from-macosforge ${destroot}${prefix}/var/rsync/macports
    xinstall ${filespath}/sync-from-macosforge.sh.in ${destroot}${prefix}/bin/sync-from-macosforge.sh
    xinstall -m 644 ${filespath}/${name}.plist.in ${destroot}/Library/LaunchDaemons/${name}.plist
    reinplace "s|@PREFIX@|${prefix}|g" ${destroot}${prefix}/bin/sync-from-macosforge.sh ${destroot}/Library/LaunchDaemons/${name}.plist
}
